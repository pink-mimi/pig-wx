/* pages/detail/detail.wxss */

.container{
  padding: 0;
  margin: 0;
  width: 100%;
  position: relative;
}
.detail_swiper{
  width: 100%;
}
.swiper_img{
  width: 100%;
  height: 450rpx;
}


/* 修改swiper指示点位置 */
.wx-swiper-dots {
  position: relative;
  left: unset !important;
  right: 50%;
  transform: translateX(50%) !important;
}
.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom:60rpx;
}


/* content */
.detail_content{
  box-sizing: border-box;
  padding: 30rpx;
  background-color: white;
  position: absolute;
  top:400rpx;
  left: 0;
  width: 100%;
  z-index:9;
  border-radius: 50rpx;
}
/* 房源名字 */
.house_name{
  font-size: 40rpx;
  font-weight:700;
}
/* 房源描述 */
.house_desc{
  display: flex;
  justify-content: space-between;
  margin: 50rpx 0;
}
.house_desc1{
  width: 50%;
  text-align: center;
  display: flex;
  justify-content: center;
}
.house_desc1_img{
  border: 1rpx solid #757575;
  border-radius: 50%;
  padding: 10rpx;
}
.house_desc1_img image{
  width: 60rpx;
  height: 60rpx;
  display: block;
}
.house_desc1_text{
  padding-left: 10rpx;
}
.house_desc1_text view{
  font-size: 24rpx;
  text-align: left;
  padding-top: 3rpx;
}

/* 房源地图 */
.house_map{
  height: 50rpx;
  background-color: skyblue;
}


/* 房源日历 */
.house_date{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #ffd2f3;
  border-radius: 10rpx;
  margin: 10rpx 0;
}
.date_ru{
  width: 40%;
}
.date_li{
  width: 40%;
  text-align: center;
}
.yue,.ri{
  font-size: 40rpx;
}

.text{
  color: #757575;
}
.arrow{
  font-size: 32rpx;
  text-align: right;
}
