/* pages/collect/collect.wxss */

.container{
  width: 100%;
  padding: 0;
  margin: 0;
}
.header1{
  width: 100%;
  text-align: center;
  padding: 100rpx 0;
}
.desc{
  text-align: center;
  color: #757575;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}
.login{
  padding: 10rpx 60rpx;
  font-size: 30rpx;
  color: white;
  font-weight: 700;
  background-color: #ff4081;
  border-radius: 30rpx;
}

/* header2 */
.header2{
  width: 100%;
  box-sizing: border-box;
}
.wu{
  margin: 50rpx 30rpx;
  background-color:#eeeeee;
  padding: 30rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #757575;
}

/* 推荐民宿 */
.recommend{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.recommend_title{
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 20rpx;

}

.recommend_list{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.recommend_item{
  box-sizing: border-box;
  width: 49%;
  margin-bottom: 20rpx;
  padding: 5rpx;
  border-radius: 8rpx;
  background-color: white;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.2);
}
.recommend_img image{
  width: 100%;
  height: 300rpx;
  display: block;
  border-radius: 10rpx;
}
.recommend_name{
  font-size: 28rpx;
  font-weight: 700;
  min-height: 76rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.recommend_desc{
  font-size: 22rpx;
  color: #757575;
  min-height: 60rpx;
}
.recommend_price{
  padding-bottom: 20rpx;
}
.new_price{
  font-size:36rpx ;
  color: #ff4081;
  margin-right: 10rpx;
}
.old_price{
  font-size: 24rpx;
  color: #cccccc;
  text-decoration: line-through;
}